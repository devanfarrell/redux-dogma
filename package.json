{
	"name": "redux-dogma",
	"version": "0.4.0",
	"license": "MIT",
	"author": "Devan Farrell",
	"main": "dist/index.js",
	"module": "dist/redux-dogma.esm.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/devanfarrell/redux-dogma.git"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run format && npm run lint -- --fix"
		}
	},
	"scripts": {
		"build": "tsdx build",
		"dev": "tsdx watch",
		"format": "prettier --write \"src/*.ts\" \"**/*.md\"",
		"format:check": "prettier --list-different \"src/*.ts\" \"**/*.md\"",
		"start": "npm run dev",
		"test": "tsdx test --env=jsdom",
		"ci:test": "tsdx test --CI --coverage",
		"lint": "tsdx lint src",
		"prepare": "npm run lint && npm run format:check && npm test && npm run build"
	},
	"prettier": {
		"printWidth": 140,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"devDependencies": {
		"@types/jest": "^26.0.3",
		"@types/redux": "^3.6.0",
		"husky": "^4.2.5",
		"prettier": "^2.0.5",
		"tsdx": "^0.13.2",
		"tslib": "^2.0.0",
		"typescript": "^3.9.5"
	},
	"dependencies": {
		"@babel/plugin-transform-runtime": "^7.10.3",
		"immer": "^7.0.5",
		"redux": "^4.0.5",
		"redux-devtools-extension": "^2.13.8",
		"redux-immutable-state-invariant": "^2.1.0",
		"redux-saga": "^1.1.3"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/*.ts",
			"!src/index.ts"
		]
	}
}